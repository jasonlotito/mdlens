{
  "name": "mdlens",
  "version": "0.1.2",
  "description": "A clean markdown reader/writer built with Electron",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "clean": "rm -rf dist build",
    "build": "npm run clean && electron-builder",
    "build:mac": "npm run clean && electron-builder --mac",
    "build:win": "npm run clean && electron-builder --win",
    "build:linux": "npm run clean && electron-builder --linux",
    "release": "npm run clean && electron-builder --publish=always",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "markdown",
    "editor",
    "electron",
    "reader",
    "writer"
  ],
  "author": "Jason Lotito",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^38.1.2",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "codemirror": "^5.65.20",
    "highlight.js": "^11.11.1",
    "marked": "^16.3.0"
  },
  "build": {
    "appId": "com.mdlens.app",
    "productName": "mdlens",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "fileAssociations": [
      {
        "ext": "md",
        "name": "Markdown Document",
        "description": "Markdown Document",
        "role": "Editor"
      },
      {
        "ext": "markdown",
        "name": "Markdown Document",
        "description": "Markdown Document",
        "role": "Editor"
      },
      {
        "ext": "mdown",
        "name": "Markdown Document",
        "description": "Markdown Document",
        "role": "Editor"
      },
      {
        "ext": "mkd",
        "name": "Markdown Document",
        "description": "Markdown Document",
        "role": "Editor"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage",
      "category": "Office"
    },
    "publish": {
      "provider": "github",
      "owner": "jasonlotito",
      "repo": "mdlens"
    }
  }
}
